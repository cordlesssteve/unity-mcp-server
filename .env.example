# Unity MCP Server Environment Configuration Template
# Copy this file to .env and configure your specific values

# =============================================================================
# SECURITY NOTICE
# =============================================================================
# This file contains environment variable templates for the Unity MCP Server.
# - NEVER commit actual API keys, passwords, or sensitive data to version control
# - Always use environment variables for secrets in production
# - Keep this .env.example file updated with new configuration options
# - Ensure .env is listed in .gitignore to prevent accidental commits

# =============================================================================
# Unity Configuration
# =============================================================================

# Unity Editor installation path (leave empty for auto-detection)
UNITY_EDITOR_PATH=

# Default Unity project path
UNITY_PROJECT_PATH=

# Unity Hub installation path (for multi-version support)
UNITY_HUB_PATH=

# Unity license type (Personal, Plus, Pro)
UNITY_LICENSE_TYPE=Personal

# =============================================================================
# MCP Server Configuration
# =============================================================================

# Server port (default: 3000)
MCP_SERVER_PORT=3000

# Server host (default: localhost)
MCP_SERVER_HOST=localhost

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable development mode
DEV_MODE=false

# =============================================================================
# AI/ML Integration
# =============================================================================

# OpenAI API key for AI-powered features (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative AI provider configurations
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# AI model preferences
PREFERRED_AI_MODEL=gpt-4
AI_TEMPERATURE=0.7

# =============================================================================
# Cloud Integration
# =============================================================================

# Unity Cloud Build API key
UNITY_CLOUD_BUILD_API_KEY=your_unity_cloud_build_api_key_here

# Unity Analytics API key
UNITY_ANALYTICS_API_KEY=your_unity_analytics_api_key_here

# Unity Collaborate/Plastic SCM credentials
UNITY_COLLABORATE_TOKEN=your_collaborate_token_here

# =============================================================================
# External Tool Integration
# =============================================================================

# Version control integration
GIT_USERNAME=your_git_username
GIT_EMAIL=your_git_email

# Package manager credentials
NPM_TOKEN=your_npm_token_here
NUGET_API_KEY=your_nuget_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# Database connection for project metadata and learning
DATABASE_URL=sqlite:./unity_mcp_data.db

# Redis for caching (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# Security Configuration
# =============================================================================

# JWT secret for authentication
JWT_SECRET=your_very_secure_jwt_secret_here

# API rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Performance Configuration
# =============================================================================

# Maximum number of concurrent Unity operations
MAX_CONCURRENT_UNITY_OPERATIONS=3

# Build timeout in minutes
BUILD_TIMEOUT_MINUTES=30

# Cache size limits
CACHE_SIZE_MB=512

# =============================================================================
# Monitoring and Analytics
# =============================================================================

# Application insights key
APPLICATION_INSIGHTS_KEY=your_app_insights_key_here

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Usage analytics (set to false to disable)
ENABLE_ANALYTICS=true

# =============================================================================
# Development and Testing
# =============================================================================

# Test Unity project path for development
TEST_UNITY_PROJECT_PATH=./test_projects/sample_unity_project

# Mock mode for testing without Unity
MOCK_UNITY_MODE=false

# Enable debug logging for specific modules
DEBUG_MODULES=unity,mcp,ai

# =============================================================================
# Plugin Configuration
# =============================================================================

# Plugin directory path
PLUGIN_DIRECTORY=./plugins

# Enabled plugins (comma-separated)
ENABLED_PLUGINS=asset-manager,build-automation,code-generator

# Plugin-specific configurations
ASSET_MANAGER_CACHE_SIZE=256
BUILD_AUTOMATION_MAX_PARALLEL=2
CODE_GENERATOR_TEMPLATE_PATH=./templates

# =============================================================================
# CONFIGURATION VALIDATION
# =============================================================================
# Required variables (must be set):
# - UNITY_PROJECT_PATH (if not using auto-detection)
# - OPENAI_API_KEY or ANTHROPIC_API_KEY (for AI features)
# - JWT_SECRET (for security)
#
# Optional variables will use sensible defaults if not set.
#
# For production deployment:
# 1. Copy this file to .env
# 2. Set all required variables
# 3. Configure security-related variables
# 4. Test the configuration before deploying